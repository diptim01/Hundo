    <style>
       .box-effect {
             box-shadow: 0 8px 8px 0 rgba(0,0,0,0.2);
             transition: 0.3s;
    
       }

       .box-effect:hover {
             box-shadow: 0 12px 16px 0 rgba(0,0,0,0.2);
       }
    </style>
</head>




<body class="fix-header fix-sidebar card-no-border">
    <div id="main-wrapper">
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-6" style="margin:auto;  margin-top: 70px">
                    <div class="card">
                        <div class="card-body box-effect">
                            <h4 class="card-title">Hundo-P Start page</h4>
                            <h6 class="card-subtitle">Make today exceptional</h6>
                            <form class="floating-labels m-t-40" action="@Url.Action("Pageone","DailyExec")" method="post">

                                <div class="form-group m-b-40 focused">
                                    <input type="text" disabled class="form-control" id="input2">
                                    <span class="bar"></span>
                                    <label for="input2">Today is <span style="color:green; font-weight:600">@DateTime.Today.DayOfWeek</span></label>
                                </div>

                                <div class="form-group m-b-40 focused">
                                    <input type="text" class="form-control" name="DailyTheme" id="input1">
                                    <span class="bar"></span>
                                    <label for="input1">Create a theme for the day</label>
                                </div>


                                <div class="form-group m-b-40">
                                    <textarea class="form-control" rows="4" id="input7" name="DailySummary"></textarea>
                                    <span class="bar"></span>
                                    <label for="input7">Write more about the task (optional)</label>
                                </div>


                                <div class="form-group m-t-50">
                                    <select class="form-control" id="timeSpent" name="TimeSpent">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                    <span class="bar"></span>
                                    <label for="timeSpent">Estimated Completion Time</label>
                                </div>

                                <div style="margin-top:30px;">
                                    <button type="button" class="btn btn-info btn-circle btn-xl" id="sa-success"><i class="fa fa-check"></i> </button><span style="margin-left:10px;">Submit</span>
                                    <button style="margin-left:10px;" type="button" class="btn btn-danger btn-circle btn-xl"><i class="fa fa-times"></i> </button><span style="margin-left:10px;">Cancel</span>
                                </div>
                            </form>

                        </div>
                    </div>

                </div>
            </div>

        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->
        <footer class="footer">
            © 2018 Hundo-P
        </footer>
        <!-- ============================================================== -->
        <!-- End footer -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Page wrapper  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->

    <script src="~/Content/assets/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/Content/assets/plugins/popper/popper.min.js"></script>
    <script src="~/Content/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="~/Scripts/js/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="~/Scripts/js/waves.js"></script>
    <!--Menu sidebar -->
    <script src="~/Scripts/js/sidebarmenu.js"></script>
    <!--stickey kit -->
    <script src="~/Content/assets/plugins/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <script src="~/Content/assets/plugins/sparkline/jquery.sparkline.min.js"></script>
    <!--Custom JavaScript -->
    <script src="~/Scripts/js/custom.min.js"></script>
    <script src="~/Scripts/js/jasny-bootstrap.js"></script>
    @*Sweet-Alert*@
    <script src="~/Content/assets/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="~/Content/assets/plugins/sweetalert/jquery.sweet-alert.custom.js"></script>
    <!-- ============================================================== -->
    <!-- Style switcher -->
    <!-- ============================================================== -->
    <script src="~/Content/assets/plugins/styleswitcher/jQuery.style.switcher.js"></script>


